{% extends 'layout.twig' %}
{% block title %}Accueil{% endblock %}

{% block content %}
	<div class="container">
		<div class="line">
			<div class="col-xs-12">
				<h2>Partez à la découverte de l'île intense en 4x4 !</h2>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="line">
		  <div id="myCarousel" class="carousel slide" data-ride="carousel">
		    <!-- Indicators -->
		    <ol class="carousel-indicators">
		      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		      <li data-target="#myCarousel" data-slide-to="1"></li>
		      <li data-target="#myCarousel" data-slide-to="2"></li>
		    </ol>

		    <!-- Wrapper for slides -->
		    <div class="carousel-inner">
		      <div class="item active">
		        <img src="img/reunion1.jpg" alt="Los Angeles" style="width:100%;">
		      </div>

		      <div class="item">
		        <img src="img/reunion2.jpg" alt="Chicago" style="width:100%;">
		      </div>

		      <div class="item">
		        <img src="img/reunion3.jpg" alt="New york" style="width:100%;">
		      </div>
		    </div>

		    <!-- Left and right controls -->
		    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
		      <span class="glyphicon glyphicon-chevron-left"></span>
		      <span class="sr-only">Previous</span>
		    </a>
		    <a class="right carousel-control" href="#myCarousel" data-slide="next">
		      <span class="glyphicon glyphicon-chevron-right"></span>
		      <span class="sr-only">Next</span>
		    </a>
			</div>
		</div>
	</div>

	{% for circuit in circuits %}
		<article>
			<h3>{{ circuit.name }}</h3>
		</article>
	{% endfor %}
{% endblock %}
